			a.deptCd = td.eq(3).find("#chairSn").val();
			
			console.log("a : " + JSON.stringify(a));
			
// 			// 체크된 row의 모든 값을 배열에 담는다.
// 			arr.push(chairSn); 
// 			arr.push(chairNm); 
// 			arr.push(deptCd);
 
			arr.push(a);
		});
		
		
			console.log("arr : ", arr);
			
			$.ajax({
				url : '/hospital/manage/hosInfo/createChair',
